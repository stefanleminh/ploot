{
  "name": "ploot",
  "version": "1.0.0",
  "description": "An Overwatch bot that manages 6v6-Events or Scrims.",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun ./src/index.ts",
    "start-prod": "bun run build && node ../build/index.js",
    "watch": "bun ./src/index.ts --watch",
    "test": "bun test",
    "test-ci": "cp ./src/__mocks__/mock-config.json config.json && bun run test && rm config.json",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "build": "bun build index.ts --outdir ./build --target=bun"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stefanleminh/ploot.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stefanleminh/ploot/issues"
  },
  "homepage": "https://github.com/stefanleminh/ploot#readme",
  "dependencies": {
    "discord.js": "^14.14.1",
    "keyv": "^4.3.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "bun-types": "^1.0.30",
    "eslint": "^8.32.0",
    "eslint-config-standard-with-typescript": "^32.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "standard": "^17.1.0",
    "ts-standard": "^12.0.1",
    "typescript": "^5.3.3"
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
